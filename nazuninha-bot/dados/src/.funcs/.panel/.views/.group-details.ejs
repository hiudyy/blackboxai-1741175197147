<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nazuninha Bot - Detalhes do Grupo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        'poppins': ['Poppins', 'sans-serif']
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .stat-card {
            transition: all 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .group-banner {
            height: 200px;
            background-size: cover;
            background-position: center;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 font-poppins transition-colors duration-200">
    <!-- Navbar -->
    <nav class="bg-white dark:bg-gray-800 shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <a href="/groups" class="flex items-center space-x-4">
                        <img src="/img/logo.png" alt="Logo" class="h-12 w-12 rounded-full shadow-lg">
                        <div>
                            <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Nazuninha Bot</h1>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Detalhes do Grupo</p>
                        </div>
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/groups" class="flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">
                        <i class="fas fa-arrow-left mr-2"></i>
                        <span>Voltar aos Grupos</span>
                    </a>
                    <button id="themeToggle" class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                        <i class="fas fa-moon text-gray-600 dark:text-gray-400 dark:hidden"></i>
                        <i class="fas fa-sun text-yellow-400 hidden dark:block"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Group Banner -->
    <div class="group-banner relative" style="background-image: url('<%= group.image %>');">
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6">
            <div class="flex items-center space-x-4">
                <img src="<%= group.image %>" alt="<%= group.name %>" class="w-20 h-20 rounded-xl shadow-lg">
                <div>
                    <div class="flex items-center space-x-2 mb-1">
                        <i class="fas fa-fire text-orange-500"></i>
                        <h1 class="text-2xl font-bold text-white"><%= group.name %></h1>
                    </div>
                    <p class="text-gray-200"><%= group.description %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8">
        <!-- Stats Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            <!-- Members Card -->
            <div class="stat-card bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 rounded-full bg-blue-100 dark:bg-blue-900">
                            <i class="fas fa-users text-blue-600 dark:text-blue-300 text-xl"></i>
                        </div>
                        <span class="text-3xl font-bold text-blue-600 dark:text-blue-400"><%= group.members %></span>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Membros</h3>
                </div>
            </div>

            <!-- Admins Card -->
            <div class="stat-card bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 rounded-full bg-purple-100 dark:bg-purple-900">
                            <i class="fas fa-user-shield text-purple-600 dark:text-purple-300 text-xl"></i>
                        </div>
                        <span class="text-3xl font-bold text-purple-600 dark:text-purple-400"><%= group.adminCount %></span>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Administradores</h3>
                </div>
            </div>

            <!-- Messages Stats Card -->
            <div class="stat-card bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden sm:col-span-2 lg:col-span-1">
                <div class="p-6">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">Estatísticas</h3>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <span class="text-gray-600 dark:text-gray-400">Mensagens Recebidas</span>
                            <span class="font-semibold text-gray-800 dark:text-white"><%= group.stats.messagesReceived %></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-600 dark:text-gray-400">Comandos Executados</span>
                            <span class="font-semibold text-gray-800 dark:text-white"><%= group.stats.commandsExecuted %></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-600 dark:text-gray-400">Mensagens Enviadas</span>
                            <span class="font-semibold text-gray-800 dark:text-white"><%= group.stats.messagesSent %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Users Section -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden mb-8">
            <div class="px-6 py-4 bg-gradient-to-r from-orange-500 to-pink-500 dark:from-orange-600 dark:to-pink-600">
                <h2 class="text-xl font-semibold text-white">Top 5 Usuários Mais Ativos</h2>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <% if (group.topUsers && group.topUsers.length > 0) { %>
                        <% group.topUsers.forEach((user, index) => { %>
                            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                                <div class="flex items-center space-x-4">
                                    <div class="w-8 h-8 flex items-center justify-center rounded-full 
                                        <%= ['bg-yellow-100 text-yellow-600', 'bg-gray-100 text-gray-600', 'bg-orange-100 text-orange-600', 'bg-blue-100 text-blue-600', 'bg-green-100 text-green-600'][index] %>
                                        dark:bg-opacity-20">
                                        <span class="font-semibold"><%= index + 1 %>º</span>
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-800 dark:text-white"><%= user.pushname %></p>
                                        <p class="text-sm text-gray-500 dark:text-gray-400"><%= user.number %></p>
                                    </div>
                                </div>
                                <span class="text-gray-600 dark:text-gray-300"><%= user.messages %> msgs</span>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                            <p>Nenhum dado de atividade disponível</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Systems Section -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-blue-500 to-indigo-500 dark:from-blue-600 dark:to-indigo-600">
                <h2 class="text-xl font-semibold text-white">Sistemas Ativos</h2>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <div class="flex items-center p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <i class="fas fa-shield-alt text-xl <%= group.systems.antilink ? 'text-green-500' : 'text-gray-400' %> mr-3"></i>
                        <div>
                            <p class="font-medium text-gray-800 dark:text-white">Anti-link</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400"><%= group.systems.antilink ? 'Ativado' : 'Desativado' %></p>
                        </div>
                    </div>
                    <div class="flex items-center p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <i class="fas fa-door-open text-xl <%= group.systems.welcome ? 'text-green-500' : 'text-gray-400' %> mr-3"></i>
                        <div>
                            <p class="font-medium text-gray-800 dark:text-white">Bem-vindo</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400"><%= group.systems.welcome ? 'Ativado' : 'Desativado' %></p>
                        </div>
                    </div>
                    <div class="flex items-center p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                        <i class="fas fa-shield-alt text-xl <%= group.systems.antiflood ? 'text-green-500' : 'text-gray-400' %> mr-3"></i>
                        <div>
                            <p class="font-medium text-gray-800 dark:text-white">Anti-flood</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400"><%= group.systems.antiflood ? 'Ativado' : 'Desativado' %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800 shadow-lg mt-8">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <p class="text-gray-600 dark:text-gray-400 mb-4 md:mb-0">
                    Desenvolvido com ❤️ por Hiudy
                </p>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-white">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-white">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Theme toggle functionality
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;

        // Check for saved theme preference
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            html.classList.add('dark');
        }

        themeToggle.addEventListener('click', () => {
            html.classList.toggle('dark');
            localStorage.theme = html.classList.contains('dark') ? 'dark' : 'light';
        });
    </script>
</body>
</html>
